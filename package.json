{
  "name": "bip21",
  "version": "2.0.3",
  "description": "A BIP21 compatible URL encoding utility library",
  "author": "Daniel Cousens",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitcoinjs/bip21.git"
  },
  "bugs": {
    "url": "https://github.com/bitcoinjs/bip21/issues"
  },
  "homepage": "https://github.com/bitcoinjs/bip21",
  "keywords": [
    "bip21",
    "bitcoin"
  ],
  "main": "./index.cjs",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "require": "./index.cjs",
      "import": "./index.js",
      "types": "./index.d.ts"
    }
  },
  "files": [
    "index.js",
    "index.cjs",
    "index.d.ts"
  ],
  "scripts": {
    "coverage-report": "nyc report --reporter=lcov",
    "coverage": "c8 --check-coverage --branches 90 --functions 90 npm run unit",
    "standard": "standard --ignore test",
    "test": "npm run standard && npm run coverage",
    "unit": "tape test/*.js"
  },
  "dependencies": {
    "query-string": "^9.0.0"
  },
  "devDependencies": {   
    "c8": "^10.1.2",
    "standard": "*",
    "tape": "^5.3.0"
  }
}
